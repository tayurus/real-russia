.radio-buttons
    display: flex;
    align-items: center;

.radio-buttons__wrapper
    position: relative
    margin: 0px 10px 10px 0px;

.radio-buttons__view
    user-select: none;
    font-family "Open Sans"
    cursor: pointer
    font-size 17px
    padding: 10px 40px
    border 1px solid #b0b0b0
    transition: 0.4s
    border-radius: 3px

.radio-buttons__radio
    display: none

.radio-buttons__radio:checked + .radio-buttons__view
    background: #8ac43f;
    color: #fff;

.radio-buttons__title
    font-family: "Open Sans";
    font-size: 13px;
    line-height: 20px;
    margin-bottom:10px

@media (max-width:380px),(max-device-width:380px) {
    .radio-buttons__view{
        padding: 10px 20px
    }
}
