.datepicker
    width: 260px
    border: 10px solid #e2e2e2
    outline: 1px solid #acacac;

.datepicker__month
    width: 100%
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px
    background: #cc091d

.datepicker__prev
    width: 20px;
    height: 20px;
    cursor: pointer;
    background: url('img/arrow-datepicker-left.png') no-repeat center / 6px 11px;

.datepicker__current
    color: #ffffff;
    font-family: "Open Sans";
    font-size: 14px;

.datepicker__next
    width: 20px;
    height: 20px;
    cursor: pointer;
    background: url('img/arrow-datepicker-right.png') no-repeat center / 6px 11px;

.datepicker__days
    width: 100%;
    text-align: center;
