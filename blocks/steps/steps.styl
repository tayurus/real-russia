.steps
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 100px
    font-family: 'Open Sans'
    width: 570px
    &__line
        position: absolute;
        width: 99%
        height: 7px
        background-color: rgba(52, 52, 52, 0.7);
        z-index: -1
        left: 1
        &_grey
          width: 208px;
          height: 7px;
          box-shadow: 1px 1px 0 rgba(255, 255, 255, 0.75), inset 1px 1px 2px rgba(0, 0, 0, 0.1), inset 0 0 0 rgba(0, 0, 0, 0.05);
          background-color: #d3d3d3;
          background-image: linear-gradient(to top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.05) 100%);
          right: 0
    &__item
      position: relative;
      &-step
        width: 26px;
        height: 26px
        background-color: #353535;
        background-image: linear-gradient(to top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.05) 100%);
        display: flex
        align-items: center;
        justify-content: center;
        border-radius: 50%
        color: #ffffff;
        font-family: "Open Sans";
        font-size: 17px;
        font-weight: 700;
        text-transform: uppercase;
        position: relative;
        &_active
            width: 33px;
            height: 33px;
            border: 2px solid #343434;
            background-color: #ffffff;
            color: #353535;
        &_disabled
            background-color: #8a8484;
            background-image: linear-gradient(to top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.05) 100%);
      &-icon
          width: 20px;
          height: 20px;
          background-color: #86be3d;
          display: flex;
          align-items: center;
          justify-content: center;
          position: absolute;
          border-radius: 50%
          right: -11px;
          top: -8px;
          &_warning
              background-color: #cc091d;
              color: #ffffff;
              font-family: "Open Sans";
              font-size: 15px;
              font-weight: 700;
              line-height: 15.83px;
      &-text
        color: #353535;
        font-family: "Open Sans";
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        position: absolute;
        width: 110px
        top: 33px;
        left: -28px;
        &_disabled
          color: #8e8e8e;
          top: 33px;
          left: -12px;
        &_active
          top: 37px;
          left: -12px;
