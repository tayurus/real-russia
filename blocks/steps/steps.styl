.steps
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 100px
    font-family: 'Open Sans'
    width: 570px
    &__line
        position: absolute;
        width: 99%
        height: 7px
        background-color: rgba(52, 52, 52, 0.7);
        z-index: -1
        left: 1
    &__item
        width: 26px;
        height: 26px
        background-color: #353535;
        background-image: linear-gradient(to top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.05) 100%);
        display: flex
        align-items: center;
        justify-content: center;
        border-radius: 50%
        color: #ffffff;
        font-family: "Open Sans";
        font-size: 17px;
        font-weight: 700;
        text-transform: uppercase;
        position: relative;
        &-icon
            width: 20px;
            height: 20px;
            background-color: #86be3d;
            display: flex;
            align-items: center;
            justify-content: center;
            position: absolute;
            border-radius: 50%
            right: -11px;
            top: -8px;
            &_warning
                background-color: #cc091d;
                color: #ffffff;
                font-family: "Open Sans";
                font-size: 15px;
                font-weight: 700;
                line-height: 15.83px;
        &_active
            width: 33px;
            height: 33px;
            border: 2px solid #343434;
            background-color: #ffffff;
            color: #353535;
        &_disabled
            background-color: #8a8484;
            background-image: linear-gradient(to top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.05) 100%);
