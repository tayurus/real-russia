.button
    cursor: pointer
    border-radius: 3px
    font-size: 15px
    font-weight: 400;
    line-height: 1
    font-family: 'Open Sans'
    text-transform: uppercase;
    padding: 11px 28px 11px 32px
    font-weight: 700;
    color: #fff
    border: none
    background-color: #d89c22;
    &_red
        background-color: #cc091d;
        color: #ffffff;
        font-size: 14px;
        padding: 12px 41px 11px 39px
        text-transform: uppercase;
        border: none
    &__text
      color #000000
      font-family "Open Sans"
      font-size 12px
      font-weight 400
      line-height 18px
      margin-top: 6px
      max-width: 230px
