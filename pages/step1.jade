                        include ../blocks/steps/steps.jade
                    
                    include ../blocks/total/total.jade 
                    
            .container.bg-gray
                .d-flex.align-items-center
                    div.d-flex
                        button.button.button_accept.mr-3 RETRIEVE SAVED APPLICATION
